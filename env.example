# =====================================================
# Configuración de Supabase (REQUERIDO)
# =====================================================
# URL del proyecto Supabase
# Obtener de: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://tu-proyecto.supabase.co

# Clave anónima pública (para cliente web/móvil)
# Obtener de: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_ANON_KEY=tu_clave_anonima_aqui

# Clave de servicio (NO exponer en cliente - solo backend)
# Descomenta solo para scripts del servidor o migraciones
# VITE_SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =====================================================
# Configuración de Base de Datos
# =====================================================
# Modo mock (usa datos simulados en lugar de Supabase)
# true = Usa datos mock (desarrollo sin conexión)
# false = Usa Supabase real
VITE_MOCK_MODE=false

# =====================================================
# Configuración de la aplicación
# =====================================================
VITE_APP_NAME=FleetManager
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=development

# Configuración de mapas (opcional)
VITE_MAPBOX_TOKEN=tu_token_de_mapbox
VITE_GOOGLE_MAPS_API_KEY=tu_api_key_de_google_maps

# Configuración de notificaciones (opcional)
VITE_FCM_SERVER_KEY=tu_clave_fcm
VITE_VAPID_PUBLIC_KEY=tu_clave_vapid_publica

# Configuración de analytics (opcional)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_MIXPANEL_TOKEN=tu_token_de_mixpanel

# =====================================================
# Configuración de desarrollo
# =====================================================
# Modo debug (habilita logs adicionales)
VITE_DEBUG_MODE=true
